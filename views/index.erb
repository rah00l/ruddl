<h2><%= @feed.title %></h2>
<div id="feed">
<% @docs.each do |doc| %>
    <div class="one-third column item">
        <h3><%= doc.title %></h3>
        <% if doc.images[0] %>
            <img src="<%= doc.images[0] %>"/>
        <% end %>
        <%= doc.content.encode("UTF-8") %>
    </div>
<% end %>
</div>